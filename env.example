# Server
HOST=0.0.0.0
PORT=3001
LOG_LEVEL=info

# Redis (in-memory tracking only; keys must have TTL)
REDIS_URL=redis://127.0.0.1:6379

# HMAC secret for QR/join capability tokens (32+ bytes recommended)
JOIN_TOKEN_SECRET=change-me-to-a-long-random-secret

# Hardening knobs
ROOM_MAX_PARTICIPANTS=10
ROOM_KEY_TTL_MS=600000
QR_ROTATION_MS=60000

# Flood protection
MAX_WS_MSG_BYTES=262144
MAX_APP_CIPHERTEXT_BYTES=65536
MAX_MSGS_PER_10S=200
MAX_BYTES_PER_10S=1048576
MAX_CONNS_PER_IP=50

